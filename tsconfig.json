{
  "compilerOptions": {

    "target": "ES2020",
    "module": "commonjs",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "typeRoots": [

			"./node_modules/@types",
			"./src/@types"

			],
    "types": [

			"node",
			"http-status"

		],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },

	"files": [

		"src/http-status.ts"

	],
	"exclude": [

		"node_modules",
		"test",
		"dist"
	]

}
